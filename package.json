{
    "name": "capitalization-correction",
    "displayName": "CApitalization Correction",
    "description": "Corrects wrong capitalization in text input.",
    "version": "1.0.0",
    "publisher": "maziac",
    "license": "MIT",
    "keywords": [
        "capitalization",
        "input",
        "text",
        "utility"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/maziac/capitalization-correction.git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "assets/icon.png",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "'CApitalization Correction' Configuration",
            "properties": {
                "capitalization-correction.includeFiles": {
                    "type": "string",
                    "default": "md,markdown,txt,text",
                    "scope": "resource",
                    "description": "Add here all file extensions to include as a comma separated list. E.g. 'txt,md'. An empty line matches no file. Case insensitive.",
                    "order": 10
                },
                "capitalization-correction.cStyleCommentsFiles": {
                    "type": "string",
                    "default": "c,cpp,c++,h,hpp,js,ts,tsx,java,cs",
                    "scope": "resource",
                    "description": "A comma separated list of file extensions used for programming languages. In these files only the C-style comments (//, /* */) are checked for worng capitalization.",
                    "order": 20
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "tslint": "eslint ./**/*.ts",
        "watch": "tsc -w -p ./",
        "test": "mocha -u tdd ./out/tests/",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "20.11.6",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.3.3"
    }
}
